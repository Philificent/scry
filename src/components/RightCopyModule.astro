---
interface Props {
	desc: string;
  img: string;
}

const { desc, img } = Astro.props;
---

<section class="flex flex-col sm:flex-row w-full bg-[#e6e6e6]">
  <p class="bg-[#e7e7e7] flex flex-1 w-full justify-center sm:justify-end sm:w-1/2 order-2 sm:order-1">
    {<img class="self-end" src={img} alt="decorative image" width="320" height="320" loading="lazy" /> ?? ''}
  </p>
  <p class="text-2xl self-center max-w-prose sm:w-1/2 p-4 order-1 sm:order-2">{desc ?? ''}</p>
</section>
